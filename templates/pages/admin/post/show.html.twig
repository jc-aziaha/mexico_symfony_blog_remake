{% extends "themes/base_admin.html.twig" %}

{% block title %}Lire l'article : {{post.title }}{% endblock %}

{% block description %}Lire l'article : {{post.title }}{% endblock %}

{% block main %}
    <div class=" my-3 container">
        <div class="text-center">
            {% if post.image %}
                <img class="img-fluid" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.title }}">
            {% endif %}
        </div>
        <div class="text-center">
            <h1>{{post.title}}</h1>   
            <small>Publi√© le {{post.publishedAt|format_date()}}</small>     
        </div>
        <article>
            {{post.content|raw}}
        </article>
    </div>
{% endblock %}