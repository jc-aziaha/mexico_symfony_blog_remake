{% extends "themes/base_admin.html.twig" %}

{% block title %}Liste des articles{% endblock %}

{% block description %}Liste des articles{% endblock %}

{# jQuery #}
{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{# Datatables #}
{% block dataTables %}
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#table').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
                },
            });
        } );
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des articles</h1>

    {% for message in app.flashes('success') %}
        <div class="text-center alert alert-success alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('admin_post_create')}}" class="btn btn-primary shadow"><i class="fas fa-plus"></i> Nouvel article</a>
    </div>

    <div class="table-responsive">
        <table id="table" class="table table-striped table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Catégorie</th>
                    <th>Tags</th>
                    <th>Publié?</th>
                    <th>Contenu</th>
                    <th>Créé le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{post.id}}</td>
                        <td>
                            {% if post.image %}
                                <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('admin_post_thumb') }}" alt="{{ post.title }}">
                            {% endif %}
                            
                        </td>
                        <td>{{post.title}}</td>
                        <td>{{post.description}}</td>
                        <td>{{post.category.name}}</td>
                        <td class="text-center">
                            {% if post.tags is empty %}
                                <p>---</p>
                            {% else %}
                                {% for tag in post.tags %} 
                                    <span class="badge text-bg-secondary">{{tag.name}}</span>
                                {% endfor %}
                            {% endif %}
                        </td>
                        <td>
                            {% if post.isPublished %}
                                <p>Publié le {{ post.publishedAt|format_date() }}</p>
                            {% else %}
                                <p>Pas encore</p>
                            {% endif %}
                            
                            <form method="POST" action="{{path('admin_post_publish', {'id':post.id})}}" class="d-flex justify-content-center align-items-center">
                                <div class="form-check form-switch">
                                    <input type="hidden" name="csrf_token" value="{{csrf_token('publish_post_'~post.id)}}">
                                    <input type="hidden" name="_method" value="PUT">
                                    <input {{ post.isPublished ? 'checked' : '' }}  onclick="return confirm('Confirmer cette action?');" onchange="this.form.submit()" class="form-check-input" type="checkbox" role="switch" id="switch_{{post.id}}">
                                    <label class="form-check-label" for="switch_{{post.id}}"></label>
                                </div>
                            </form>
                        </td>
                        <td>
                            <a href="{{path('admin_post_show', {'id':post.id})}}" class="text-dark" title="Lire cet article"><i class="fa-solid fa-eye"></i></a>
                        </td>
                        <td>{{post.createdAt|format_datetime()}}</td>
                        <td>{{post.updatedAt|format_datetime()}}</td>
                        <td>
                            <a class="mx-2 text-secondary" href="{{path('admin_post_edit', {'id':post.id})}}"><i class="fas fa-edit"></i></a>
                            <a onclick="event.preventDefault(); return confirm('Confirmer la suppression?') && document.querySelector('#delete_post_{{post.id}}_form').submit();" class="mx-2 text-danger" href=""><i class="fa-solid fa-trash"></i></a>
                            <form id="delete_post_{{post.id}}_form" method="POST" action="{{path('admin_post_delete', {'id':post.id})}}">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('delete_post_'~post.id)}}">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
