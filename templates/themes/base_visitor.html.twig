{% set clientUri = app.request.pathInfo %}
<!DOCTYPE html>
<html lang="fr">
	<head>
		{# L'encodage des caractères #}
		<meta charset="UTF-8">

		{# Le mMinimum de responsive design #}
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		{# Le titre de chaque page dans l'onglet #}
		<title>{% block title %}{% endblock %} - Le blog de Jean Dupont</title>

		{# La description de chaque page #}
		<meta name="description" content="{% block description %}{% endblock %}">

		{# Les balises utiles pour le SEO #}
		<meta name="robots" content="index, follow">
		<meta name="theme-color" content="#ffffff">
		<meta name="author" content="dwwm">
		<meta name="publisher" content="dwwm">

		{# La favicon #}
		<link rel="apple-touch-icon" sizes="180x180" href="{{asset('apple-touch-icon.png')}}">
		<link rel="icon" type="image/png" sizes="32x32" href="{{asset('favicon-32x32.png')}}">
		<link rel="icon" type="image/png" sizes="16x16" href="{{asset('favicon-16x16.png')}}">
		<link rel="manifest" href="{{asset('site.webmanifest')}}">
		<link rel="mask-icon" href="{{asset('safari-pinned-tab.svg')}}" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">

		{# Font awesome #}
	    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

        {# Google font #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins&display=swap" rel="stylesheet">

		{% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        {# Ma feuille de style #}
        <link rel="stylesheet" href="{{asset('css/app.css')}}">
	</head>
	<body>

		{# La barre de navigation #}
		<nav class="navbar navbar-expand-lg">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{path('visitor_welcome_index')}}">JD</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link {{ clientUri == path('visitor_welcome_index') ? 'jd-active' : '' }}" {{ clientUri == path('visitor_welcome_index') ? 'aria-current="page"' : '' }} href="{{path('visitor_welcome_index')}}">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('visitor_welcome_index')}}#about-me-section">Qui suis-je?</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ clientUri == path('visitor_blog_index') ? 'jd-active' : '' }}" href="{{path('visitor_blog_index')}}" {{ clientUri == path('visitor_blog_index') ? 'aria-current="page"' : '' }}>Blog</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ clientUri == path('visitor_contact_create') ? 'jd-active' : '' }}" href="{{path('visitor_contact_create')}}" {{ clientUri == path('visitor_contact_create') ? 'aria-current="page"' : '' }} href="{{path('visitor_contact_create')}}">Contact</a>
						</li>
					</ul>
                    <ul class="navbar-nav ms-auto">
						{% if app.user %}
							{% if is_granted('ROLE_ADMIN') %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('admin_home_index')}}">Espace admin</a>
								</li>
							{% endif %}

							{% if is_granted('ROLE_USER') %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('user_home_index')}}">Espace user</a>
								</li>
							{% endif %}
							
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_logout')}}">Déconnexion</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="my-2 mx-lg-2  btn btn-outline-primary shadow" href="{{path('visitor_authentication_login')}}">Connexion</a>
							</li>
							<li class="nav-item">
								<a class="my-2 mx-lg-2 btn btn-primary shadow" href="{{path('visitor_registration_register')}}">Inscription</a>
							</li>
						{% endif %}
						
                    </ul>
				</div>
			</div>
		</nav>

		{# Le contenu spécifique à chaque page #}
		{% block main %}{% endblock %}

		{# Le pieds de page #}
		<footer class="bg-primary text-white text-center py-2">
			<div class="container">
				<div class="row">
					<div class="col-md-4">
						<p class="fs-5">Jean Dupont</p>
						<hr>
						<p class="cursor-pointer"><a href="{{path('visitor_welcome_index')}}#about-me-section" class="text-decoration-none text-white">Qui suis-je ?</a></p>
						<p class="cursor-pointer"><a href="{{path('visitor_contact_create')}}" class="text-decoration-none text-white">Contactez-moi</a></p>
					</div>
					<div class="col-md-4">
						<p class="fs-5">Le blog</p>
						<hr>
						<p class="cursor-pointer"><a href="{{path('visitor_welcome_index')}}#last-posts" class="text-decoration-none text-white">Mes 3 derniers articles</a></p>
						<p class="cursor-pointer"><a href="{{path('visitor_blog_index')}}" class="text-decoration-none text-white">Tous mes articles</a></p>
					</div>
					<div class="col-md-4">
						<p class="fs-5">DWWM</p>
						<hr>
						<p class="cursor-pointer"><a href="#" class="text-decoration-none text-white">Les conditions générales d'utilisation</a></p>
					</div>
				</div>
			</div>
		</footer>

		{% block javascript %}{% endblock %}
	</body>
</html>
